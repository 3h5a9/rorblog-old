<%= render 'shared/navbar' %>

<div class="container my-5">
  <div class="row">
    <div class="col-md-8">
      <div id="posts">
      <% @posts.each do |post| %>
        <div class="card mb-3" id="<%= dom_id post %>">
          <div class="card-body">
            <h4 class="card-title"><%= link_to post.title, post_path(post), class: 'text-decoration-none' %></h4>
            <p class="card-text"><%= truncate(strip_tags(post.content.to_s), length: 75) %></p>
          </div>
          <div class="card-footer text-xs">
            <span>Posted <%= time_ago_in_words(post.created_at) %> ago</span>
          </div>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>