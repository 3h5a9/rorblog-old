<%= turbo_frame_tag "comment_#{comment.id}" do %>
  <div class="card card-body mt-3">
    <p><%= comment.body %></p>
    <div class="btn-container d-flex">
      <%= button_to 'Delete', [comment.post, comment], method: :delete, class: 'btn btn-sm btn-danger me-2' %>
      <%= link_to 'Edit', edit_post_comment_path(@post, comment), class: 'btn btn-sm btn-primary' %>
    </div> 
  </div>
<% end %>


